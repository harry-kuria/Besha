<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbudgetbackground"
    tools:context=".NewBudget">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="Name" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView4"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/amountInput"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="Amount" />

    <EditText
        android:id="@+id/amountInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView5"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:hint="Amount"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/categoryInput"
        android:paddingTop="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="Categories" />

    <EditText
        android:id="@+id/categoryInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView9"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:inputType="textPersonName"
        android:hint="Select Category" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/setColor"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="Colors" />

    <EditText
        android:id="@+id/setColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingTop="@dimen/_5sdp"
        android:layout_above="@id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:hint="Set Color" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fromInput"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="Period" />

    <EditText
        android:id="@+id/fromInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="@dimen/_220sdp"
        android:layout_marginBottom="-13dp"
        android:hint="From"
        android:inputType="textPersonName"
        android:paddingTop="@dimen/_5sdp" />

    <EditText
        android:id="@+id/toInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_220sdp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="-16dp"
        android:hint="To"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginBottom="-14dp"
        android:paddingTop="@dimen/_5sdp"
        android:text="Recurring" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/cardview_light_background"
        app:itemIconTint="@android:color/darker_gray"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottomnavmenu" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/frequencyInput"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginBottom="-6dp"
        android:paddingTop="@dimen/_10sdp"
        android:text="Frequency" />

    <EditText
        android:id="@+id/frequencyInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginBottom="-8dp"
        android:hint="Set Frequency"
        android:inputType="phone" />

    <Button
        android:id="@+id/button4"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_above="@id/bottomnav"
        android:layout_marginBottom="-22dp"
        android:background="@drawable/create_budget_button" />

</RelativeLayout>